<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.RegisterWindowController">
    <children>
        <Label fx:id="broiler" layoutX="90.0" layoutY="75.0" prefHeight="30.0" prefWidth="583.0" text="Добро пожаловать,бройлер,вступай в наш клуб!" textAlignment="CENTER">
            <font>
                <Font name="Arial" size="25.0" />
            </font>
        </Label>
        <Label fx:id="broiler_enter" layoutX="130.0" layoutY="106.0" prefHeight="42.0" prefWidth="558.0" text="Введите свой логин и пароль">
            <font>
                <Font name="Arial Bold" size="31.0" />
            </font>
        </Label>
        <TextField fx:id="loginField" layoutX="227.0" layoutY="187.0" prefHeight="30.0" prefWidth="294.0" promptText="Логин" style="-fx-border-color: silver; -fx-border-radius: 5;" />
        <Label fx:id="login_label" layoutX="230.0" layoutY="165.0" prefHeight="16.0" prefWidth="39.0" text="Логин" textFill="#00000099">
            <font>
                <Font name="Arial" size="14.0" />
            </font>
        </Label>
        <PasswordField fx:id="passwordField" layoutX="227.0" layoutY="249.0" prefHeight="30.0" prefWidth="294.0" promptText="Пароль" style="-fx-border-color: silver; -fx-border-radius: 5;" />
        <Label fx:id="pass_label" layoutX="229.0" layoutY="228.0" prefHeight="16.0" prefWidth="66.0" text="Пароль" textFill="#00000099">
            <font>
                <Font name="Arial" size="14.0" />
            </font>
        </Label>
        <Button id="main_button_field" fx:id="registerButton" layoutX="228.0" layoutY="313.0" mnemonicParsing="false" opacity="0.87" prefHeight="36.0" prefWidth="294.0" style="-fx-background-color: #9f2e52; -fx-border-color: #af2a5f; -fx-border-radius: 5;" text="Зарегистрироваться" textFill="WHITE">
            <font>
                <Font name="Arial Bold" size="15.0" />
            </font>
        </Button>
        <Label fx:id="remember" layoutX="255.0" layoutY="379.0" text="Вспомнил свой аккаунт?">
            <font>
                <Font name="Arial" size="12.0" />
            </font>
        </Label>
        <Hyperlink id="register_field" fx:id="backInWindowAuth" layoutX="393.0" layoutY="375.0" text="Войди в систему">
            <font>
                <Font name="Arial" size="12.0" />
            </font>
        </Hyperlink>
    </children>
</AnchorPane>
